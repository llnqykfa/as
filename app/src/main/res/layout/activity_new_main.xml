<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aixianshengxian.activity.NewMainActivity"
    android:orientation="vertical" >

    <include layout="@layout/head"></include>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_20"
        android:orientation="vertical" >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/lvbaihe"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/guid2"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="@dimen/margin_top_5">

        <RelativeLayout
            android:id="@+id/guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_5">

            <TextView
                android:id="@+id/tv_plan"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:background="@drawable/square_bg"
                android:drawableTop="@mipmap/plan"
                android:gravity="center"
                android:paddingTop="@dimen/padding_top"
                android:text="计划"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_purchase"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_toRightOf="@+id/tv_plan"
                android:background="@drawable/square_bg"
                android:drawableTop="@mipmap/purchase"
                android:gravity="center"
                android:paddingTop="@dimen/padding_top"
                android:text="采购"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />


            <TextView
                android:id="@+id/tv_check"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_toRightOf="@+id/tv_purchase"
                android:background="@drawable/square_bg"
                android:drawableTop="@mipmap/check"
                android:gravity="center"
                android:paddingTop="@dimen/padding_top"
                android:text="验收"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_machine"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_below="@+id/tv_plan"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@drawable/square_bg"
                android:drawableTop="@mipmap/purchase"
                android:gravity="center"
                android:paddingTop="@dimen/padding_top"
                android:text="加工"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_sales"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_below="@+id/tv_check"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_toRightOf="@+id/tv_machine"
                android:background="@drawable/square_bg"
                android:drawableTop="@mipmap/sales"
                android:gravity="center"
                android:paddingTop="@dimen/padding_top"
                android:text="销售"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_delivery"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_below="@+id/tv_check"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_toRightOf="@+id/tv_sales"
                android:background="@drawable/square_bg"
                android:drawableTop="@mipmap/delivery"
                android:gravity="center"
                android:paddingTop="@dimen/padding_top"
                android:text="配送"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_stock_removal"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_alignBaseline="@+id/tv_allocate"
                android:layout_alignBottom="@+id/tv_allocate"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/square_bg"
                android:drawableTop="@mipmap/stock"
                android:gravity="center"
                android:paddingTop="@dimen/padding_top"
                android:text="出库"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_allocate"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_below="@+id/tv_sales"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_toRightOf="@+id/tv_stock_removal"
                android:background="@drawable/square_bg"
                android:drawableTop="@mipmap/stock"
                android:gravity="center"
                android:paddingTop="@dimen/padding_top"
                android:text="调拨"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_inventory"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_alignTop="@+id/tv_allocate"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_toRightOf="@+id/tv_returned"
                android:background="@drawable/square_bg"
                android:drawableTop="@mipmap/stock"
                android:gravity="center"
                android:paddingTop="@dimen/padding_top"
                android:text="盘点"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_receive"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_below="@+id/tv_stock_removal"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@drawable/square_bg"
                android:drawableTop="@mipmap/receive"
                android:gravity="center"
                android:paddingTop="@dimen/padding_top"
                android:text="领筐"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_returned"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_below="@+id/tv_allocate"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_toRightOf="@+id/tv_receive"
                android:background="@drawable/square_bg"
                android:drawableTop="@mipmap/returned"
                android:gravity="center"
                android:paddingTop="@dimen/padding_top"
                android:text="还筐"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_unable"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_below="@+id/tv_inventory"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_toRightOf="@+id/tv_returned"
                android:background="@drawable/square_bg"
                android:drawableTop="@mipmap/returned"
                android:gravity="center"
                android:paddingTop="@dimen/padding_top"
                android:text="报废"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
