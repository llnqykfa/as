<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aixianshengxian.activity.check.CheckActivity">

    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <include layout="@layout/head"></include>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_marginLeft="@dimen/margin_15">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="扫描商品采购标签"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_15"
            android:orientation="horizontal">

            <include
                layout="@layout/search_head3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></include>

            <Button
                android:id="@+id/btn_check"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@color/green_title"
                android:text="验收"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_check_purchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_80"
            android:layout_marginLeft="@dimen/margin_80"
            android:layout_marginTop="@dimen/margin_top_5"
            android:layout_marginBottom="@dimen/margin_top_10"
            android:text="采 购 列 表"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/green_text"
            android:background="@drawable/green_corners_bg" />
    </LinearLayout>
</RelativeLayout>
