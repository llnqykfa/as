<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/green_title"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="9"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_gravity="center"
            android:background="@drawable/new_corners_bg"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/edit_search_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:hint="请输入搜索内容"
                android:gravity="center"
                android:textSize="@dimen/text_size_14"
                android:background="@null" />

            <TextView
                android:id="@+id/tv_search_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:hint="点击搜索"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/image_close_search"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/close"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/image_search"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:src="@mipmap/iv_search"
            android:layout_marginLeft="@dimen/margin_top_12"
            android:layout_marginRight="@dimen/margin_15"/>
    </LinearLayout>

</LinearLayout>