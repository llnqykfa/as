<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_marginRight="@dimen/margin_30"
            android:layout_marginTop="@dimen/margin_top_10">

            <TextView
                android:id="@+id/tv_provider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLength="19"
                android:text="厦门绿百合食品有限公司"
                android:textColor="@color/green_title"
                android:textSize="@dimen/text_size_14" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_5"
        android:layout_marginLeft="@dimen/margin_30">
        <TextView
            android:id="@+id/tv_purchase_ucode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:text="CDK265633DEWDWD"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_marginRight="@dimen/margin_20">
            <TextView
                android:id="@+id/tv_purchase_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_top_5"
                android:paddingBottom="@dimen/margin_top_5"
                android:gravity="center"
                android:lines="1"
                android:ellipsize="end"
                android:layout_alignParentLeft="true"
                android:text="2017-7-31"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/gray_text2"/>
            <TextView
                android:id="@+id/tv_purchase_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_top_5"
                android:paddingBottom="@dimen/margin_top_5"
                android:paddingLeft="@dimen/margin_top_10"
                android:paddingRight="@dimen/margin_top_10"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:background="@drawable/gray_corners_bg"
                android:text="未审核"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/gray_text2"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_top_10"
        android:layout_height="0.5dp"
        android:background="@color/gray_line"/>
</LinearLayout>