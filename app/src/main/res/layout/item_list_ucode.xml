<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="@dimen/margin_top_10"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_top_5"
        android:layout_marginTop="@dimen/margin_top_10"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_ucode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="DH170711000004"
            android:textColor="@color/gray_text4"
            android:textSize="@dimen/text_size_14" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_operate_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-9-15 17:43:23"
                android:textColor="@color/gray_text4"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/margin_top_5"
                android:src="@mipmap/close"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/margin_top_10"
        android:background="@color/gray_line"/>
</LinearLayout>