<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_top_5"
    android:layout_marginRight="@dimen/margin_top_5"
    android:layout_marginBottom="@dimen/margin_top_5"
    android:background="@color/green_background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_top_10"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:maxLength="20"
                android:ellipsize="end"
                android:text="东北大蒜(大)"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/tv_unit"
                android:layout_width="55dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/new_corners_bg"
                android:drawableRight="@mipmap/down"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_top_10"
                android:paddingRight="@dimen/margin_top_10"
                android:singleLine="true"
                android:text="斤"
                android:textColor="@color/gray_text3"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_top_5"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="采购量"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:theme="@style/MyEditText" />

                <EditText
                    android:id="@+id/edt_purchase_num"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/margin_top_10"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:inputType="numberDecimal"
                    android:paddingLeft="@dimen/margin_top_10"
                    android:numeric="decimal"
                    android:singleLine="true"
                    android:textColor="@color/gray_text3"
                    android:textSize="@dimen/text_size_14"
                    android:theme="@style/MyEditText"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:text="单价"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />

                <EditText
                    android:id="@+id/edt_unit_price"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/margin_top_10"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:inputType="numberDecimal"
                    android:numeric="decimal"
                    android:paddingLeft="@dimen/margin_top_10"
                    android:singleLine="true"
                    android:textColor="@color/gray_text3"
                    android:textSize="@dimen/text_size_14"
                    android:theme="@style/MyEditText"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_top_5"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/margin_15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小计"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/edt_purchase_price"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_top_10"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:inputType="numberDecimal"
                    android:paddingLeft="@dimen/margin_top_10"
                    android:numeric="decimal"
                    android:singleLine="true"
                    android:textColor="@color/gray_text3"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="产地"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />

                <EditText
                    android:id="@+id/edt_place"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/margin_top_10"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_top_10"
                    android:singleLine="true"
                    android:textColor="@color/gray_text3"
                    android:textSize="@dimen/text_size_14"
                    android:theme="@style/MyEditText" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_top_10"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注："
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />

                <EditText
                    android:id="@+id/edt_remark"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入备注"
                    android:padding="@dimen/margin_top_10"
                    android:singleLine="false"
                    android:textColor="@color/gray_text3"
                    android:textSize="@dimen/text_size_14"
                    android:theme="@style/MyEditText"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:gravity="center|right"
                android:src="@mipmap/delete1"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>