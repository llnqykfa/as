<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_top_5"
    android:layout_marginRight="@dimen/margin_top_5"
    android:layout_marginBottom="@dimen/margin_top_5"
    android:orientation="vertical"
    android:background="@color/green_background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:maxLength="11"
                android:text="萝卜去皮"
                android:textColor="@color/green_text"
                android:textSize="@dimen/text_size_15" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保质期"
                    android:textColor="@color/gray_text2"
                    android:textSize="@dimen/text_size_14" />

                <EditText
                    android:id="@+id/edt_stay_day"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_top_10"
                    android:gravity="center"
                    android:numeric="integer"
                    android:singleLine="true"
                    android:textColor="@color/gray_text3"
                    android:textSize="@dimen/text_size_14"
                    android:theme="@style/MyEditText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_top_5"
                    android:text="天"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="入库数"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />
                <EditText
                    android:id="@+id/edt_stock_in_num"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_top_10"
                    android:gravity="center"
                    android:numeric="decimal"
                    android:singleLine="true"
                    android:textColor="@color/gray_text3"
                    android:textSize="@dimen/text_size_14"
                    android:theme="@style/MyEditText" />

                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kg"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_50">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="入库单价"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />
                <EditText
                    android:id="@+id/edt_stock_in_price"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:numeric="decimal"
                    android:singleLine="true"
                    android:textColor="@color/gray_text3"
                    android:textSize="@dimen/text_size_14"
                    android:theme="@style/MyEditText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_top_5"
                    android:text="元"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/delete1"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>

    </LinearLayout>



</LinearLayout>